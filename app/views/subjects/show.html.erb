<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subject.name %>
</p>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %>

<br><br>

<% if @subject.chapters.any? %>
  <h3><%= @subject.name %> Books</h3>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @subject.chapters.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= subject.description %></td>
          <td><%= subject.author %></td>
          <td><%= link_to 'Show', subject %></td>
          <td><%= link_to 'Edit', edit_subject_topic_path(chapter.subject, chapter) %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br><br>

<%= link_to 'New Chapter', new_subject_chapter_path(@subject.id) %>
