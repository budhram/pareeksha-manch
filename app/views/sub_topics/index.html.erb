<p id="notice"><%= notice %></p>

<h1>Sub Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_topics.each do |sub_topic| %>
      <tr>
        <td><%= sub_topic.title %></td>
        <td><%= sub_topic.description %></td>
        <td><%= sub_topic.topic.title %></td>
        <td><%= link_to 'Show', sub_topic %></td>
        <td><%= link_to 'Edit', edit_sub_topic_path(sub_topic) %></td>
        <td><%= link_to 'Destroy', sub_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub Topic', new_sub_topic_path %>
